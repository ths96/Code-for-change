<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%=  'transparent' if controller_name = 'bookings' && action_name = 'show' %>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'cfc2.jpg' %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%= link_to "Create a project", new_project_path, class: "nav-link" %>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Projects", projects_path, class: "nav-link" %>
        </li>
        <% if current_user.charity %>
          <li class="nav-item">
            <%= link_to "Charity profile", charity_path(current_user.charity), class: "nav-link" %>
          </li>
          <li>

            <!-- <a class="btn btn-flat" href="/projects/new">Charity? Create a Project</a> -->
          </li>
        <% else %>
        <li class="nav-item">
            <%= link_to "My Profile", "/profile", class: "nav-link" %>
          </li>
          <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://i.ya-webdesign.com/images/avatar-icon-png-6.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= current_user.email %>
            <%= link_to "Project Dashboard", profile_path(anchor: 'projects'), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <li class="nav-item">
         <li class="nav-item">
          <%= link_to "Sign Up as a Charity", new_user_registration_path(coder: false), class: "nav-link" %>
        </li>
          <%= link_to "Sign Up As Coder",  new_user_registration_path(coder: true), class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

